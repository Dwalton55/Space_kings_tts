<div class="row">
  <% if @characters.length == 0%>
  <h3> No Characters</h3>
  <%else%>
  <% @characters.each do |character| %>
<%if character.user_id == current_user.id %>
<div class="col-md-4">
<div class="char-header">
  <h3>Name: 
  <%= character.name %>
</h3>
</div>
<div>
<p>
  <strong>Player:</strong>
  <%= character.player %>
</p>

<p>
  <strong>Concept:</strong>
  <%= character.concept %>
</p>

<p>
  <strong>Health</strong>
  <%= character.maxHealth %>
</p>


<p>
  <strong>Brawn:</strong>
  <%= character.brawn %>
</p>

<p>
  <strong>Agility:</strong>
  <%= character.agility %>
</p>

<p>
  <strong>Wit:</strong>
  <%= character.wit %>
</p>

<p>
  <strong>Intelligence:</strong>
  <%= character.intelligence %>
</p>

<p>
  <strong>Charm:</strong>
  <%= character.charm %>
</p>

<p>
  <strong>Presense:</strong>
  <%= character.presense %>
</p>

<p>
  <strong>Dodge:</strong>
  <%= character.maxDodge %>
</p>


<p>
  <strong>Initiative:</strong>
  <%= character.initiative %>
</p>

<p>
  <strong>Drive:</strong>
  <%= character.maxDrive %>
</p>
<p>
 <%= link_to "Play Game", game_path(id: @character.game_id)%> 
</p>
</div>
</div>

<% end -%>

<% end -%>
<% end -%>
</div>
